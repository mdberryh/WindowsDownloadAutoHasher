<UserControl x:Class="FHasher.Pages.FileHasherPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="650" >
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>

            <StackPanel Orientation="Vertical" MinWidth="200">

                <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center">
                            Browse for a file, enter in a hash, or drag and drop a file to load the hash.
                </TextBlock>
                <StackPanel  x:Name="FirstHash" Orientation="Horizontal"></StackPanel>


                <Button Name="BtnCompare" Content="Compare" HorizontalAlignment="Center" Click="BtnCompare_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
